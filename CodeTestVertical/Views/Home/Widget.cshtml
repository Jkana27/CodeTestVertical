@model CodeTestVertical.Models.WidgetModel

@{
    ViewData["Title"] = "Widget";
}

<h1>Crate a Widget</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Widget">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WidgetName" class="control-label"></label>
                <input asp-for="WidgetName" class="form-control" />
                <span asp-validation-for="WidgetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidgetType" class="control-label"></label>
                <select asp-for="WidgetType" class="form-control" id = "WidgetType">
                    <option value = "A">A</option>
                    <option value = "B">B</option>
                    <option value = "1">1</option>
                    <option value = "2">2</option>
                </select>
                <span asp-validation-for="WidgetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidgetSubType" class="control-label"></label>
                <select asp-for="WidgetSubType" class="form-control" id="SubType" >
                </select>
                <span asp-validation-for="WidgetSubType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WidgetCreation" class="control-label"></label>
                <input asp-for="WidgetCreation" class="form-control" />
                <span asp-validation-for="WidgetCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
